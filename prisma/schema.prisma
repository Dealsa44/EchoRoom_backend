// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  avatar    String?
  bio       String?
  about     String?
  
  // Profile fields
  dateOfBirth    String?
  location       String?
  hometown       String?
  relationshipStatus String?
  chatStyle      String?
  safeMode       String   @default("light")
  anonymousMode  Boolean  @default(false)
  aiAssistant    Boolean  @default(false)
  
  // Gender and orientation
  genderIdentity     String?
  orientation        String?
  customGender       String?
  customOrientation  String?
  ethnicity          String?
  
  // Relationship preferences
  lookingForRelationship Boolean @default(false)
  lookingForFriendship  Boolean @default(false)
  relationshipType      String?
  
  // Lifestyle
  smoking      String?
  drinking     String?
  hasChildren  String?
  education    String?
  occupation   String?
  religion     String?
  politicalViews String?
  
  // Profile photos
  photos       String[]
  
  // Verification
  emailVerified    Boolean   @default(false)
  verificationCode String?
  codeExpiresAt    DateTime?
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  languages UserLanguage[]
  interests UserInterest[]
  profileQuestions UserProfileQuestion[]
  messages ChatMessage[]
  roomMemberships RoomMember[]
  forumPosts ForumPost[]
  forumComments ForumComment[]
  forumPostReactions ForumPostReaction[]
  forumCommentReactions ForumCommentReaction[]
  organizedEvents Event[]
  eventParticipations EventParticipant[]
  eventReactions EventReaction[]
  eventMessages EventMessage[]
  conversationsAsUser1 Conversation[] @relation("User1")
  conversationsAsUser2 Conversation[] @relation("User2")
  conversationStates ConversationState[]
  directMessagesSent DirectMessage[]
  directMessageVisibilities DirectMessageVisibility[]
  roomMemberStates RoomMemberState[]
  roomMessageVisibilities RoomMessageVisibility[]

  @@map("users")
}

// 1:1 private conversations (DMs)
model Conversation {
  id             String   @id @default(cuid())
  user1Id        String
  user2Id        String
  chatTheme           String?  @default("default")  // mood theme id for chat background (messages area)
  lastMessageAt       DateTime?
  lastActivityType    String?  // 'message' | 'reaction' | 'theme' – for inbox preview
  lastActivitySummary  String?  // e.g. message snippet, "Reacted with ❤️", "Theme changed to Aurora"
  lastActivityUserId   String?  // who did the last action (for "You" vs name)
  createdAt            DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user1          User     @relation("User1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2          User     @relation("User2", fields: [user2Id], references: [id], onDelete: Cascade)
  messages       DirectMessage[]
  states         ConversationState[]

  @@unique([user1Id, user2Id])
  @@map("conversations")
}

model DirectMessage {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  content        String
  type           String   @default("text")
  reactions      Json?    // [{ "userId": "...", "emoji": "❤️" }]
  createdAt      DateTime @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)
  visibilities  DirectMessageVisibility[]

  @@map("direct_messages")
}

// Per-user visibility: you see a message only if you have a row here. Delete for me = delete my rows (hard delete).
model DirectMessageVisibility {
  id        String   @id @default(cuid())
  userId    String
  messageId String

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  message DirectMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([userId, messageId])
  @@map("direct_message_visibilities")
}

// Per-user state: archive, soft delete (hide from list)
model ConversationState {
  id             String    @id @default(cuid())
  userId         String
  conversationId String
  isArchived     Boolean   @default(false)
  deletedAt      DateTime?
  clearedAt      DateTime? // when set, only messages after this time are shown to this user (their view is cleared)

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@unique([userId, conversationId])
  @@map("conversation_states")
}

model Event {
  id          String   @id @default(cuid())
  organizerId String
  title       String
  description String
  longDescription String?
  category    String
  type        String   // in-person, virtual, hybrid
  location    String
  address     String?
  coordinates Json?
  date        String
  time        String
  duration    Int      @default(60) // minutes
  maxParticipants Int  @default(20)
  price       Float    @default(0)
  currency    String   @default("USD")
  tags        String[]
  isPrivate   Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  image       String?
  language    String?
  skillLevel  String?
  ageRestriction String?
  dressCode   String?
  requirements String[]
  highlights  String[]
  aboutEvent  String?
  virtualMeetingLink String?
  additionalInfo String?
  agenda      String[]
  rules       String[]
  cancellationPolicy String?
  refundPolicy String?
  transportation String[]
  parking     String?
  accessibility String[]
  photos      String[]
  documents   Json?
  contactEmail String?
  contactPhone String?
  website     String?
  socialMedia Json?    // { facebook?, instagram?, twitter?, linkedin? } or key-value
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organizer   User     @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  participants EventParticipant[]
  reactions   EventReaction[]
  messages   EventMessage[]

  @@map("events")
}

model EventParticipant {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  joinedAt  DateTime @default(now())
  status    String   @default("confirmed") // confirmed, pending, maybe

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@map("event_participants")
}

model EventReaction {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  type      String   @default("heart")
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@map("event_reactions")
}

model EventMessage {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  content   String
  type      String   @default("text")
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("event_messages")
}

model UserLanguage {
  id          String @id @default(cuid())
  userId      String
  code        String
  name        String
  proficiency String // beginner, intermediate, advanced, native
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("user_languages")
}

model UserInterest {
  id       String @id @default(cuid())
  userId   String
  interest String
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("user_interests")
}

model UserProfileQuestion {
  id       String @id @default(cuid())
  userId   String
  question String
  answer   String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("user_profile_questions")
}

model VerificationCode {
  id        String   @id @default(cuid())
  email     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@map("verification_codes")
}

model ChatRoom {
  id          String @id @default(cuid())
  title       String
  category    String
  description String
  isPrivate   Boolean @default(false)
  icon        String?
  tags        String[]
  
  // Theme and last activity (for inbox preview)
  chatTheme           String?  @default("default")
  lastMessageAt       DateTime?
  lastActivityType    String?   // 'message' | 'reaction' | 'theme' | 'member_left' | 'member_kicked' | 'admin_changed'
  lastActivitySummary String?
  lastActivityUserId  String?
  
  // Stats
  memberCount    Int @default(0)
  activeNow      Int @default(0)
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  messages     ChatMessage[]
  members      RoomMember[]
  memberStates RoomMemberState[]
  
  @@map("chat_rooms")
}

// Per-user state: archive, cleared (only show messages after clearedAt)
model RoomMemberState {
  id         String    @id @default(cuid())
  userId     String
  roomId     String
  isArchived Boolean   @default(false)
  clearedAt  DateTime? // only show messages after this time (rejoin = see from now)
  
  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  room ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  
  @@unique([userId, roomId])
  @@map("room_member_states")
}

// Per-user message visibility: delete for me = delete row
model RoomMessageVisibility {
  id        String @id @default(cuid())
  userId    String
  messageId String
  
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  message ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  
  @@unique([userId, messageId])
  @@map("room_message_visibilities")
}

model ChatMessage {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  content   String
  type      String   @default("text") // text, image, voice, file, system
  imageUrl  String?
  fileData  Json?
  voiceData Json?
  
  // Translation and correction
  translated        Boolean @default(false)
  corrected         Boolean @default(false)
  originalContent   String?
  translatedContent String?
  corrections       Json?
  
  // Message status
  isEdited    Boolean @default(false)
  isDeleted   Boolean @default(false)
  replyTo     String?
  
  // Reactions
  reactions Json?
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  room         ChatRoom               @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user         User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  visibilities RoomMessageVisibility[]
  
  @@map("chat_messages")
}

model RoomMember {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  joinedAt  DateTime @default(now())
  isActive  Boolean  @default(true)
  isCreator Boolean  @default(false)
  
  // Relations
  room ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([roomId, userId])
  @@map("room_members")
}

// Forum: real posts, comments (with replies), heart reactions
model ForumPost {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String
  category  String
  tags      String[]
  isStickied Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments  ForumComment[]
  reactions ForumPostReaction[]
  @@map("forum_posts")
}

model ForumComment {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  parentId  String?
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  post      ForumPost  @relation(fields: [postId], references: [id], onDelete: Cascade)
  parent    ForumComment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   ForumComment[] @relation("CommentReplies")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reactions ForumCommentReaction[]
  @@map("forum_comments")
}

model ForumPostReaction {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  type      String   @default("heart")
  createdAt DateTime @default(now())
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([postId, userId])
  @@map("forum_post_reactions")
}

model ForumCommentReaction {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  type      String   @default("heart")
  createdAt DateTime @default(now())
  comment   ForumComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([commentId, userId])
  @@map("forum_comment_reactions")
}